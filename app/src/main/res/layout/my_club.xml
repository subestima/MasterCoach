<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#ffffff"
    >


    <RelativeLayout
        android:id="@+id/LineUpLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.37"
        android:layout_margin="2sp"
        >

        <LinearLayout
            android:id="@+id/middlefieldLineLL"
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#0E0E0E"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/rightKeeperLine"
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#0E0E0E"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#0E0E0E"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:orientation="horizontal"
            android:background="#0E0E0E"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:orientation="horizontal"
            android:background="#0E0E0E"
            android:layout_alignParentBottom="true"
            />

        <RelativeLayout
            android:id="@+id/gkRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/gkIcon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/field_template_foreground"
                />

            <TextView
                android:id="@+id/gkTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alberto 70''"
                android:textColor="#ffffff"
                android:background="#000000"
                android:textSize="12sp"
                android:layout_below="@+id/gkIcon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GK"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/gkTV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GK"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/gkTV"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cb1RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gkRL"
            android:layout_toEndOf="@+id/gkRL"
            android:layout_marginStart="30sp">

            <ImageView
                android:id="@+id/cb1Icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/field_template_foreground"
                />

            <TextView
                android:id="@+id/cb1TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alberto 70''"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_below="@+id/cb1Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CB"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/cb1TV"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cb2RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="15sp"
            android:layout_below="@id/cb1RL"
            android:layout_toRightOf="@+id/gkRL"
            android:layout_toEndOf="@+id/gkRL"
            >

            <ImageView
                android:id="@+id/cb2Icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/field_template_foreground"
                />

            <TextView
                android:id="@+id/cb2TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alberto 70''"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_below="@+id/cb2Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CB"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/cb2TV"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cb3RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30sp"
            android:layout_marginBottom="15sp"
            android:layout_above="@id/cb1RL"
            android:layout_toRightOf="@+id/gkRL"
            android:layout_toEndOf="@+id/gkRL"
            android:layout_marginStart="30sp">

            <ImageView
                android:id="@+id/cb3Icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/field_template_foreground"
                />

            <TextView
                android:id="@+id/cb3TV"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Alberto 70''"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_below="@+id/cb3Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CB"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/cb3TV"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mf1RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30sp"
            android:layout_marginBottom="15sp"
            android:layout_above="@id/cb1RL"
            android:layout_toRightOf="@+id/middlefieldLineLL"
            android:layout_toEndOf="@+id/middlefieldLineLL"
            android:layout_marginStart="30sp">

            <ImageView
                android:id="@+id/mf1Icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/field_template_foreground"
                />

            <TextView
                android:id="@+id/mf1TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alberto 70''"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="#000000"
                android:layout_below="@+id/mf1Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MF"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/mf1TV"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mf2RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:layout_below="@id/cb1RL"
            android:layout_toRightOf="@+id/middlefieldLineLL"
            android:layout_toEndOf="@+id/middlefieldLineLL"
            android:layout_marginStart="30sp">

            <ImageView
                android:id="@+id/mf2Icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/field_template_foreground"
                />

            <TextView
                android:id="@+id/mf2TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alberto 70''"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_below="@+id/mf2Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MF"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/mf2TV"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cfRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rightKeeperLine"
            android:layout_toStartOf="@+id/rightKeeperLine"
            android:layout_marginRight="15sp"
            >

            <ImageView
                android:id="@+id/cfIcon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/field_template_foreground"
                />

            <TextView
                android:id="@+id/cfTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alberto 70''"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_below="@+id/cfIcon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CF"
                android:layout_centerInParent="true"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/cfTV"
                />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BenchRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.65"
        android:layout_margin="20sp"
        >


        <ImageView
            android:id="@+id/subsIcon"
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:srcCompat="@mipmap/subs_icon_foreground"
            android:layout_marginTop="10sp"
            android:layout_marginRight="5sp"
            android:layout_marginEnd="5sp" />

        <HorizontalScrollView
            android:id="@+id/hsrllBench"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/subsIcon"
            >

            <LinearLayout
                android:id="@+id/BenchLL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/MyClubButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1sp"
        android:layout_weight=".7"
        >

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10sp"
            android:text="@string/save"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"
            />
    </RelativeLayout>
</LinearLayout>